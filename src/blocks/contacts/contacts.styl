.contacts
  temp()
  display flex
  justify-content space-between
  align-items center
  list-style none
  width: 115px
  margin 0
  padding 0

  &__item
    display flex

    & a
      temp()
      display flex
      align-items center
      text-decoration none
      color color__grey

      & svg
        fill color__grey

        @media(min-width: width__tablet)
          width 16px
          height 16px

      &:hover
        opacity 0.6

      &:active
        color color__darkgrey

      &:active svg
        fill color__darkgrey

    & span
      display none
