.product
  border 1px solid color__grey
  border-radius 7px
  padding 18px 16px 13px 16px
  margin 0 0 16px 0

  &:last-child
    margin 0

  @media(min-width: width__tablet)
    padding 28px 28px 28px 10px
    margin 0 0 15px 0

  @media(min-width: width__desktop)
    padding 26px 16px 20px 16px
    margin 0 0 12px 0

  &__head
    temp()
    font-size font
    color color__darkgrey
    margin 0 0 14px 0

    @media(min-width: width__tablet)
      font-size font--tablet
      margin 0 0 18px 0

    @media(min-width: width__desktop)
      font-size font--desktop

  &__attributes

    @media(min-width: width__tablet)
      display flex

  &__attr
    temp()
    color color__darkgrey
    margin 0 0 23px 0

    @media(min-width: width__tablet)
      margin 0

    & br
      display none

      @media(min-width: width__tablet)
        display inline

    &:last-of-type
      margin 0 0 30px 0

      @media(min-width: width__tablet)
        margin 0 auto 0 0

    &--cpu

      @media(min-width: width__tablet)
        width 130px
        margin 0 26px 0 0

      @media(min-width: width__desktop)
        margin 0 80px 0 0

    &--ram

      @media(min-width: width__tablet)
        width 100px
        margin 0 40px 0 0

      @media(min-width: width__desktop)
        margin 0 82px 0 0

    &--memory

      @media(min-width: width__tablet)
        width 140px

  &__wrapper
    temp()
    margin 28px 0 0 0;

    @media(min-width: width__tablet)
      display flex
      flex-direction column
      align-items center
      width 68px
      margin 0 0 0 auto;

    @media(min-width: width__desktop)
      width 120px

  &__price
    temp()
    display flex
    margin 0 0 16px 0

    @media(min-width: width__tablet)
      flex-direction column
      font-size font--desktop
      margin -10px 0 4px 0

    @media(min-width: width__desktop)
      flex-direction row
      margin 0 0 12px 0

  &__price-value
    temp()
    color color__darkgrey
    margin 0 8px 0 0

    @media(min-width: width__tablet)
      text-align center
      margin 0

    @media(min-width: width__desktop)
      margin 0 8px 0 0

  &__price-unit
    color color__darkgrey
    temp()

    @media(min-width: width__tablet)
      text-align center

  &__orderbtn

    @media(min-width: width__tablet)
      width 68px

    @media(min-width: width__desktop)
      width 76px
