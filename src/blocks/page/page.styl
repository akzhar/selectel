.page
  font-family "GothamPro", Arial, sans-serif
  font-size font
  line-height 14px
  margin 0
  // прилипающий подвал
  height 100%

  @media(min-width: width__tablet)
    font-size font--tablet
    line-height 19px

  @media(min-width: width__desktop)
    font-size font--desktop
    line-height 17px

  &__wrapper
    temp()
    width width__mobile
    margin 0 auto

    @media(min-width: width__tablet)
      width width__tablet

    @media(min-width: width__desktop)
      width width__desktop
