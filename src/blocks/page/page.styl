.page
  font-family "GothamPro", Arial, sans-serif
  font-size font
  font-height 120%
  margin 0
  // прилипающий подвал
  height 100%

  @media(min-width: width__tablet)
    font-size font--tablet

  @media(min-width: width__desktop)
    font-size font--desktop

  &__wrapper
    temp()
    box-shadow: 0px 0px 6px -2px rgba(0, 0, 0, 0.75);
    width width__mobile
    margin 0 auto

    @media(min-width: width__tablet)
      width width__tablet

    @media(min-width: width__desktop)
      width width__desktop
