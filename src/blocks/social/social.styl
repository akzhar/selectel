.social
  display flex
  flex-wrap wrap
  list-style none
  margin 0
  padding 0
  width 42px

  @media(min-width: width__tablet)
    width auto
    flex-wrap nowrap

  &__item
    temp()
    width 16px
    height 16px
    margin 0 10px 13px 0

    @media(min-width: width__tablet)
      margin 0 16px 0 0

    @media(min-width: width__desktop)
      width 22px
      height 22px

    &:nth-child(even)
      margin-right 0

      @media(min-width: width__tablet)
        margin-right 16px

    &:last-child

      @media(min-width: width__tablet)
        margin-right 0

  &__link
    display block
    width 100%
    height 100%
    position relative

    & svg
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 100%
      height 100%
      fill color__grey

    &:hover
      opacity opactiy

    &:active
      color color__darkgrey

    &:active svg
      fill color__darkgrey
