.promo

  &__content
    temp()
    display flex
    flex-direction column
    align-items flex-end
    padding 27px 20px 0 20px
    width "calc(%s - 20px - 20px)" % width__mobile
    margin 0 auto

    @media(min-width: width__tablet)
      flex-direction row
      align-items flex-start
      justify-content space-between
      width "calc(%s - 2 * %s)" % (width__tablet padding__content--tablet)
      padding 62px padding__content--tablet 0 padding__content--tablet

    @media(min-width: width__desktop)
      width "calc(%s - %s - %s)" % (width__desktop 108px padding__content--desktop)
      padding 74px 108px 0 padding__content--desktop

  &__card
    temp()
    width 100%

    @media(min-width: width__desktop)
      width 528px

  &__head
    margin 0 0 16px 0
    font-size font__head
    line-height 22px

    @media(min-width: width__tablet)
      margin 0 0 14px 0
      font-size font__head--tablet
      line-height 31px

    @media(min-width: width__desktop)
      margin 0 0 16px 0
      font-size font__head--desktop
      line-height 38px

  &__text
    margin 0 0 26px 0
    color color__grey
    font-weight normal

    & br
      display none

    @media(min-width: width__tablet)
      font-size font--tablet
      margin 0 0 27px 0

      & br
        display block

    @media(min-width: width__desktop)
      font-size font__head
      margin 0 0 26px 0
      line-height 22px

  &__picture
      z-index -1

      @media(min-width: width__tablet)
        z-index auto

    & img
      temp()
      display block
      margin -25px 10px 0 0
      width 210px

      @media(min-width: width__tablet)
        width 294px
        margin -30px 0 0 0

      @media(min-width: width__desktop)
        width 380px
        margin -56px 0 0 0
